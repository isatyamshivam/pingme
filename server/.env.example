# Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/pingme
# For MongoDB Atlas (replace with your credentials):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/pingme

# JWT Configuration (IMPORTANT: Change this in production!)
JWT_SECRET=change-this-to-a-very-secure-random-string-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=*

# Socket.IO Configuration  
SOCKET_CORS_ORIGIN=*
